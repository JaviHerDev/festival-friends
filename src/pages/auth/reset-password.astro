        </div>
    </div>

    <script>
        // Configuraci√≥n de Supabase
        const supabaseUrl = 'https://mvlrmnxatfpfjnrwzukz.supabase.co';
        const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im12bHJtbnhhdGZwZmpucnd6dWt6Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTQzMzU0NjAsImV4cCI6MjA2OTkxMTQ2MH0.MEs9gh4YMEZq-NyEn0Xla5ckyhDzFuS7E1BJdFsDtTI';
        
        const supabase = window.supabase.createClient(supabaseUrl, supabaseKey);

        // Elementos del DOM
        const loadingEl = document.getElementById('loading');
        const errorEl = document.getElementById('error');
        const resetFormEl = document.getElementById('resetForm') as HTMLFormElement;
        const successEl = document.getElementById('success');
        const passwordEl = document.getElementById('password') as HTMLInputElement;
        const confirmPasswordEl = document.getElementById('confirmPassword') as HTMLInputElement;
        const passwordErrorEl = document.getElementById('passwordError');
        const submitBtnEl = document.getElementById('submitBtn') as HTMLButtonElement;

        // Verificar que todos los elementos existen
        if (!loadingEl || !errorEl || !resetFormEl || !successEl || !passwordEl || !confirmPasswordEl || !passwordErrorEl || !submitBtnEl) {
            console.error('No se pudieron encontrar todos los elementos del DOM');
            return;
        }

        // Verificar el token de reset al cargar la p√°gina
        async function checkResetToken() {
            try {
                // Verificar si hay par√°metros de reset en la URL
                const urlParams = new URLSearchParams(window.location.search);
                const accessToken = urlParams.get('access_token');
                const refreshToken = urlParams.get('refresh_token');
                const type = urlParams.get('type');

                // Si no hay tokens en la URL, verificar si hay una sesi√≥n activa
                if (!accessToken && !refreshToken) {
                    const { data, error } = await supabase.auth.getSession();
                    
                    if (error) {
                        throw error;
                    }

                    if (data.session) {
                        // Hay una sesi√≥n activa, mostrar formulario
                        showResetForm();
                    } else {
                        // No hay sesi√≥n ni tokens, mostrar error
                        showError();
                    }
                } else {
                    // Hay tokens en la URL, intentar establecer la sesi√≥n
                    if (type === 'recovery') {
                        const { data, error } = await supabase.auth.setSession({
                            access_token: accessToken,
                            refresh_token: refreshToken
                        });

                        if (error) {
                            console.error('Error setting session:', error);
                            showError();
                        } else {
                            // Sesi√≥n establecida correctamente, mostrar formulario
                            showResetForm();
                        }
                    } else {
                        showError();
                    }
                }
            } catch (error) {
                console.error('Error checking reset token:', error);
                showError();
            }
        }

        function showResetForm() {
            loadingEl.classList.add('hidden');
            resetFormEl.classList.remove('hidden');
        }

        function showError() {
            loadingEl.classList.add('hidden');
            errorEl.classList.remove('hidden');
        }

        function showSuccess() {
            loadingEl.classList.add('hidden');
            resetFormEl.classList.add('hidden');
            successEl.classList.remove('hidden');
        }

        function showPasswordError(message) {
            passwordErrorEl.textContent = message;
            passwordErrorEl.classList.remove('hidden');
        }

        function hidePasswordError() {
            passwordErrorEl.classList.add('hidden');
        }

        // Manejar el env√≠o del formulario
        async function handleSubmit(e) {
            e.preventDefault();
            
            const password = passwordEl.value;
            const confirmPassword = confirmPasswordEl.value;

            // Validaciones
            if (password.length < 6) {
                showPasswordError('La contrase√±a debe tener al menos 6 caracteres');
                return;
            }

            if (password !== confirmPassword) {
                showPasswordError('Las contrase√±as no coinciden');
                return;
            }

            hidePasswordError();

            // Deshabilitar bot√≥n y mostrar loading
            submitBtnEl.disabled = true;
            submitBtnEl.innerHTML = `
                <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white mx-auto"></div>
                <span class="ml-2">Cambiando contrase√±a...</span>
            `;

            try {
                const { data, error } = await supabase.auth.updateUser({
                    password: password
                });

                if (error) {
                    throw error;
                }

                // √âxito
                showSuccess();
                
                // Cerrar sesi√≥n despu√©s de un momento para que el usuario tenga que hacer login
                setTimeout(async () => {
                    await supabase.auth.signOut();
                }, 3000);

            } catch (error) {
                console.error('Error updating password:', error);
                showPasswordError('Error al cambiar la contrase√±a. Int√©ntalo de nuevo.');
                
                // Restaurar bot√≥n
                submitBtnEl.disabled = false;
                submitBtnEl.innerHTML = 'Cambiar contrase√±a';
            }
        }

        // Event listeners
        resetFormEl.addEventListener('submit', handleSubmit);

        // Inicializar
        checkResetToken();
    </script>
</body>
</html>
